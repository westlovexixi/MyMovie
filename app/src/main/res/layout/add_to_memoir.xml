<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/title_memoir"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/release_date_memoir"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_memoir"
                android:layout_width="200dp"
                android:layout_height="296dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Watch Date:"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/watch_date_memoir"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"/>

                <TextView
                    android:text="Watch Time:"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/watch_time_memoir"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"/>

                <TextView
                    android:text="Cinema:"
                    android:textSize="30dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/cinema_spinner_add_memoir"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/add_cinema"
                    android:text="Add Cinema"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Comment:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/comment_memoir"
            android:hint="Please enter your comment"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:maxLength="50"/>

        <RatingBar
            android:id="@+id/rating_memoir"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2.5"
            android:numStars="5"
            android:progress="1"
            android:max="10"
            android:isIndicator="false"
            android:layout_gravity="center"/>



            <Button
                android:id="@+id/cancel_add_memoir"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <Button
                android:id="@+id/submit_memoir"
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

    </LinearLayout>
</ScrollView>